<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:paddingTop="5dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card2"
            android:layout_width="420dp"
            android:layout_height="220dp"
            android:background="@drawable/vector_menu"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="8dp">

            <TextView
                android:id="@+id/judulmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pempek telur"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textAlignment="center"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="160dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/kategorimenu"
                android:layout_width="70dp"
                android:layout_height="19dp"
                android:text="Makanan"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/dark_gray"
                android:background="@drawable/btn_circle_six"
                android:fontFamily="@font/poppinsmedium"
                app:layout_constraintTop_toBottomOf="@id/judulmenu"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="160dp"/>

            <TextView
                android:id="@+id/porsimenu"
                android:layout_width="60dp"
                android:layout_height="19dp"
                android:text="Jumbo"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/poppinsmedium"
                android:background="@drawable/btn_circle_six"
                app:layout_constraintTop_toBottomOf="@id/judulmenu"
                app:layout_constraintStart_toEndOf="@id/kategorimenu"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/deskripsimenu"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Terbuat dari ikan asli dipadu cuko hitam khas palembang sehingga rasanya nikmat sekali"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsmedium"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:layout_marginStart="160dp"
                app:layout_constraintTop_toBottomOf="@id/kategorimenu"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/hargadiskon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 20.000,00"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppinsbold"
                app:layout_constraintTop_toBottomOf="@id/deskripsimenu"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/hargamenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 15.000,00"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="165dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/poppinsbold"
                app:layout_constraintTop_toBottomOf="@id/deskripsimenu"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/edit"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="65dp"
                android:background="@drawable/background_three"
                android:padding="6dp"
                android:src="@drawable/edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/deskripsimenu" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/background_three"
                android:padding="6dp"
                android:src="@drawable/delete"
                app:layout_constraintTop_toBottomOf="@id/deskripsimenu"
                app:layout_constraintStart_toEndOf="@id/edit"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/discount"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="10%"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:background="@drawable/background_one"
                app:layout_constraintTop_toBottomOf="@id/deskripsimenu"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="160dp"
                android:layout_marginTop="2.5dp"
                android:elevation="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imagemenu"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/example_two"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>