<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mint_cream">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/banner_one"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATA MENU"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/poppinsbold"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/banner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/banner"
        android:background="@drawable/btn_circle_four"
        android:padding="5dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/texttambahmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Menu"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/steel_teal"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/add"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/texttambahmenu"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/vector_three"
        app:layout_constraintTop_toBottomOf="@id/banner2"
        android:layout_marginTop="130dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/banner3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/allkategori"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:text="All"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginStart="50dp"
                android:background="@drawable/vector_categories"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/makanankategori"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:text="Makanan"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/steel_teal"
                android:textSize="14sp"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_circle_three"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/allkategori"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/kuekategori"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:text="Kue"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/steel_teal"
                android:textSize="14sp"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_circle_three"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/makanankategori"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/minumankategori"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:text="Minuman"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/steel_teal"
                android:textSize="14sp"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_circle_three"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/kuekategori"
                tools:ignore="RtlCompat" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:paddingBottom="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/banner3"
            app:layout_constraintVertical_bias="1.0"
            tools:listitem="@layout/single_menu"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>