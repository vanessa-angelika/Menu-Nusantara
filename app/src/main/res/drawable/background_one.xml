<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Definisi Gradasi dengan 2 warna -->
            <gradient
                android:startColor="@color/deep_space_sparkle"
                android:endColor="@color/steel_teal"
                android:angle="20"/>

            <!-- Sudut membulat -->
            <corners android:radius="30dp"/>

            <!-- Definisi Border warna white -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/>
        </shape>
    </item>
</selector>
